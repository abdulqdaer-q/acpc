{
  "kind": "collectionType",
  "collectionName": "teams",
  "info": {
    "singularName": "team",
    "pluralName": "teams",
    "displayName": "Team",
    "description": "Competition teams"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "university": {
      "type": "string",
      "required": true
    },
    "coach": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "coach_name": {
      "type": "string",
      "required": false
    },
    "coach_email": {
      "type": "email",
      "required": false
    },
    "coach_phone": {
      "type": "string",
      "required": false
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "approved", "rejected"],
      "default": "pending"
    },
    "created_by_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "members": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::team-member.team-member",
      "mappedBy": "team"
    }
  }
}
